        <activity
            android:name=".Lesson2Activity"
            android:label="@string/lesson2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AndroidEmulatorActivity"
            android:label="@string/setting_up_android_emulator"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AndroidManifestActivity"
            android:label="@string/android_manifest"
            android:screenOrientation="portrait" />
