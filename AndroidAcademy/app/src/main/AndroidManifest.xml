        android:theme="@style/AppThemeLight">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Lesson1Activity"
            android:label="@string/lesson1"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GettingStartedActivity"
            android:label="@string/getting_started"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateProjectActivity"
            android:label="@string/title_activity_create_project"
