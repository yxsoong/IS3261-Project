<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yxsoong.project.androidacademy.AndroidEmulatorTab1">

    <TextView
        android:id="@+id/pageNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:text="1 of 4"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:textSize="@dimen/page_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pageNumber"
        android:orientation="vertical">

        <TextView
            android:id="@+id/beforeStartTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:text="@string/before_you_start"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/intelHAXMTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginBottom="15dp"
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/introAVDTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="@string/avd_manager"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/openAVDTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="10dp"
            android:src="@drawable/avd_manager" />

        <TextView
            android:id="@+id/clickOnCreateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:textColor="@color/black"/>

        <TableLayout
            android:id="@+id/tableView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/clickOnCreateTV">
            <TableRow>
                <com.github.chrisbanes.photoview.PhotoView
                    android:layout_width="0dp"
                    android:layout_height="168dp"
                    android:layout_weight="4"
                    android:scaleType="fitCenter"
                    android:src="@drawable/avd_deviceconfig" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:textColor="@color/black"
                    android:text="Select phone, Nexus 5X and click next"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</RelativeLayout>
